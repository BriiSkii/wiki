<div>
  <h3><%= @article.title %></h3>
</div>

<div>
  <div class="card">
    <div class="card-block">
      <%= @article.content %>
    </div>
  </div>

</div>

<br />

<hr />

<%= link_to 'Back', articles_path, class: 'btn btn-warning' %>
<%= link_to'Edit', edit_article_path(@article), class: 'btn btn-primary' if logged_in?(:site_admin) %>
<%= link_to'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' if logged_in?(:site_admin)%>
