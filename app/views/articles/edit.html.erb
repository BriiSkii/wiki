<h1>Edit article</h1>

<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div id="error-text">
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>s

  <%= f.submit "Submit" %>
<% end %>

<%= link_to 'Back', article_path(@article) %>
